<com.google.android.gms.ads.formats.NativeContentAdView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/table_m"

    android:background="@layout/list_row_click"
    android:padding="@dimen/margin_m"
    android:gravity="center_horizontal|center_vertical"
    android:minHeight="@dimen/row_l">
    <!--
    android:background="@drawable/menu_item_click"
    android:background="@color/yellow"
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/table_m"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:padding="@dimen/margin_m"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/table_m"
            android:layout_marginTop="@dimen/margin_s"
            android:layout_marginBottom="@dimen/margin_s"
            android:padding="@dimen/margin_m"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.35"
                android:padding="@dimen/margin_m"
                android:gravity="center_horizontal"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/contentad_image"
                    android:layout_width="@dimen/table_s"
                    android:layout_height="@dimen/row_3x"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margin_s"
                    android:maxHeight="100dp"
                    />
                    <!--android:adjustViewBounds="true" /-->

                <TextView
                    android:id="@+id/contentad_headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_s"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/text_l"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contentad_call_to_action"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:visibility="gone"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/margin_s"
                    android:textSize="@dimen/text_m"
                    />
                <!--
                android:textColor="#0000FF"
                    android:textStyle="bold" /-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:visibility="visible"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/contentad_body"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/text_s" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/margin_s"
                    android:gravity="bottom|center_horizontal"
                    android:visibility="visible"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/contentad_advertiser"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:textSize="@dimen/text_xs"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/contentad_logo"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginRight="8dp"
                        android:gravity="bottom" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.gms.ads.formats.NativeContentAdView>
